<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New photo</h2>
		<%= render 'photos/form', photo: @photo %>

	</div>

	<div class="col-xs-9">
		<h2>photos index</h2>
		<!--photos一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @photos.each do |photo| %>
				<tr>
					<td>
						<%= link_to user_path(photo.user) do %>
							<%= attachment_image_tag(photo.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to photo.title, photo_path(photo), class: "photo_#{photo.id}" %></td>
					<td><%= photo.body %></td>

					<td><% if @photo.favorited_by?(current_user) %>
				         <%= link_to photo_favorite_path(@photo), method: :delete do %>
                         <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                         <%= @photo.favorites.count %> いいね
		                <% end %>
		                <% else %>
		                  <%= link_to photo_favorites_path(photo), method: :post do %>
		                  <i class="fa fa-heart-o" aria-hidden="true"></i>
		                  <%= @photo.favorites.count %> いいね
		               <% end %>
                       <% end %>
                    </td>
					<td>コメント数:<%= photo.photo_comments.count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<!--photos一覧 -->
	</div>
</div>