<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% photos.each do |photo| %>
      <tr>
        <td><%= link_to user_path(photo.user) do %>
          <%= attachment_image_tag(photo.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to photo.title, photo_path(photo), class: "photo_#{photo.id}" %></td>
        <td><%= photo.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>